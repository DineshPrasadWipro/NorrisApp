<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_random">

    <fragment
        android:id="@+id/navigation_random"
        android:name="com.ds.norris.ui.random.RandomJokeFragment"
        android:label="@string/title_random"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.ds.norris.ui.search.SearchJokesFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_random" />

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.ds.norris.ui.category.CategoryFragment"
        android:label="@string/title_category"
        tools:layout="@layout/fragment_category" />
</navigation>